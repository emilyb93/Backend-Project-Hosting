{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": [{"author": "any string"}, 
                {"topic": "any string"}, 
                {"sort_by": ["date", "author", "votes", "title", "article_id", "topic"]}, 
                {"order" : ["asc", "desc"]}
              ],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments" : {
    "description" : "serves an array of comments for the article id requested in the parametric",
    "queries" : [],
    "exampleResponse" :    {
      "comments": [
        {
          "comment_id": 2,
          "author": "butter_bridge",
          "article_id": 1,
          "votes": 14,
          "created_at": "2020-10-31T00:00:00.000Z",
          "body": "The beautiful thing about treasure is that it exists."
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id" : {
    "description" : "updates the vote count for the article given, by the int given in a sent object",
    "exampleRequest" : {
      "inc_votes" : 20,
      "exampleResponse" : {
        "article": {
          "article_id": 2,
          "title": "Sony Vaio; or, The Laptop",
          "body": "Call me Mitchell.",
          "votes": 20,
          "topic": "mitch",
          "author": "icellusedkars",
          "created_at": "2020-10-15T23:00:00.000Z"
        }
      }
    }

  }
}

